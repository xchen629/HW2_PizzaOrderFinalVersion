<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/pizza_order"
        android:textAllCaps="true"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_pizza"
        android:layout_width="197dp"
        android:layout_height="242dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header"
        app:srcCompat="@drawable/pepperoni"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/selectHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_pizza"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header" />

    <TextView
        android:id="@+id/sizeSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="@string/choose_pizza_size"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/image_pizza"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectHeader" />

    <TextView
        android:id="@+id/toppingSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Extra Toppings ($1.69 each):"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sizeSelect" />

    <CheckBox
        android:id="@+id/topping1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="onTopping1Clicked"
        android:text="Onion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toppingSelect" />

    <CheckBox
        android:id="@+id/topping2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="onTopping2Clicked"
        android:text="Pinapple"
        app:layout_constraintEnd_toStartOf="@+id/topping3"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/topping1"
        app:layout_constraintTop_toBottomOf="@+id/toppingSelect" />

    <CheckBox
        android:id="@+id/topping3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="onTopping3Clicked"
        android:text="Spinach"
        app:layout_constraintEnd_toStartOf="@+id/topping4"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toEndOf="@+id/topping1"
        app:layout_constraintTop_toBottomOf="@+id/toppingSelect" />

    <CheckBox
        android:id="@+id/topping4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="onTopping4Clicked"
        android:text="Tomato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toEndOf="@+id/topping1"
        app:layout_constraintTop_toBottomOf="@+id/toppingSelect" />

    <TextView
        android:id="@+id/delOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery?"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switch1"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toppingSelect"
        app:layout_constraintVertical_bias="0.423" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSwitchClicked"
        android:text="No, $0.00"
        android:textOff="No, $0.00"
        android:textOn="Yes, $2.00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toppingSelect"
        app:layout_constraintVertical_bias="0.449" />

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Total Price: "
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toppingSelect" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:onClick="onSizeClicked"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/toppingSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sizeSelect"
        app:layout_constraintVertical_bias="0.423">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="123dp"
            android:layout_height="47dp"
            android:onClick="onSizeClicked"
            android:text="Med ($9.99)" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:onClick="onSizeClicked"
            android:text="Lrg ($13.99)" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:onClick="onSizeClicked"
            android:text="XLrg ($15.99)" />
    </RadioGroup>

    <ListView
        android:id="@+id/pizza_list"
        android:layout_width="202dp"
        android:layout_height="242dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/sizeSelect"
        app:layout_constraintEnd_toEndOf="@+id/image_pizza"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectHeader"
        app:layout_constraintVertical_bias="0.028" />

</androidx.constraintlayout.widget.ConstraintLayout>